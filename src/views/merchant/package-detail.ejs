<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Package - <%= pkg.name %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <%- include('../partials/topnav', { title: 'Package', subtitle: pkg.name, containerClass: 'max-w-5xl' }) %>

    <div class="max-w-5xl mx-auto px-4 py-6 space-y-4">
      <div class="bg-white border rounded-xl shadow-sm p-5">
        <div class="flex items-start justify-between gap-4">
          <div class="min-w-0">
            <div class="text-lg font-semibold text-gray-900"><%= pkg.name %></div>
            <div class="mt-1 text-sm text-gray-600 whitespace-pre-line"><%= pkg.description || '' %></div>
            <div class="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-gray-700">
              <div><span class="text-gray-500">Price:</span> $<%= pkg.price %></div>
              <div><span class="text-gray-500">Original:</span> <%= pkg.originalPrice ? ('$' + pkg.originalPrice) : '-' %></div>
              <div><span class="text-gray-500">Region:</span> <%= pkg.region || '-' %></div>
              <div><span class="text-gray-500">Status:</span> <%= pkg.isActive ? 'Active' : 'Inactive' %></div>
            </div>
          </div>
          <div class="flex items-center gap-2 flex-shrink-0">
            <a href="/merchant/dashboard" class="px-3 py-1.5 rounded-lg border text-gray-700 hover:bg-gray-50 text-sm">Back</a>
            <form method="post" action="/merchant/packages/<%= pkg.id %>/delete">
              <button class="px-3 py-1.5 rounded-lg border text-gray-700 hover:bg-gray-50 text-sm" type="submit">Delete</button>
            </form>
          </div>
        </div>

        <% if (pkg.imageUrl) { %>
          <div class="mt-4">
            <div class="text-sm font-medium text-gray-900 mb-2">Image</div>
            <img src="<%= pkg.imageUrl %>" alt="<%= pkg.name %>" class="max-w-full h-48 object-contain border rounded bg-gray-50" />
          </div>
        <% } %>
      </div>

      <div class="bg-white border rounded-xl shadow-sm p-5">
        <div class="text-sm font-semibold text-gray-900">Items</div>
        <% if (!items || items.length === 0) { %>
          <div class="mt-2 text-sm text-gray-600">No items (itemsJson is empty).</div>
        <% } else { %>
          <div class="mt-3 space-y-2">
            <% items.forEach(function(it){ %>
              <div class="border rounded-lg p-3 text-sm">
                <div class="font-medium text-gray-900"><%= it.title || it.chineseName || 'Item' %></div>
                <div class="mt-1 text-gray-600">
                  Qty: <%= it.quantity || '-' %>
                  · Product: <span class="font-mono"><%= it.shopifyProductId || '-' %></span>
                  · Variant: <span class="font-mono"><%= it.shopifyVariantId || '-' %></span>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>

      <div class="bg-white border rounded-xl shadow-sm p-5">
        <div class="text-sm font-semibold text-gray-900">Delivery dates</div>
        <% if (!deliveryDates || deliveryDates.length === 0) { %>
          <div class="mt-2 text-sm text-gray-600">No delivery dates configured.</div>
        <% } else { %>
          <div class="mt-2 flex flex-wrap gap-2">
            <% deliveryDates.forEach(function(d){ %>
              <span class="px-2 py-1 rounded-full border bg-gray-50 text-xs text-gray-700"><%= d %></span>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>

