<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= service ? service.name : 'Service' %> - Service Booking</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <%- include('../partials/topnav', {
      title: 'Service Booking',
      containerClass: 'max-w-3xl'
    }) %>

    <div class="max-w-3xl mx-auto px-4 py-6 space-y-4">
      <% if (error) { %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-800 text-sm"><%= error %></div>
      <% } %>

      <% if (!service) { %>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <div class="text-sm text-gray-600">Service not available.</div>
        </div>
      <% } else { %>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <div class="flex gap-4">
            <div class="w-24 h-24 flex-shrink-0 rounded bg-gray-100 border overflow-hidden">
              <% if (service.imageUrl) { %>
                <img src="<%= service.imageUrl %>" alt="<%= service.name %>" class="w-full h-full object-cover" />
              <% } else { %>
                <div class="w-full h-full flex items-center justify-center text-[10px] text-gray-400">No image</div>
              <% } %>
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-xl font-bold text-gray-900"><%= service.name %></div>
              <div class="text-sm text-gray-600 mt-2 whitespace-pre-line"><%= service.description || '' %></div>
              <div class="mt-3 flex flex-wrap items-center gap-3 text-sm">
                <div class="text-gray-700">
                  <% if (service.price) { %>
                    Price: <span class="font-semibold">$<%= Number(service.price).toFixed(2) %></span>
                  <% } else { %>
                    Price: <span class="font-semibold">-</span>
                  <% } %>
                </div>
                <div class="text-gray-700">
                  <% if (service.durationMins) { %>
                    Duration: <span class="font-semibold"><%= service.durationMins %> mins</span>
                  <% } else { %>
                    Duration: <span class="font-semibold">-</span>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border p-5">
          <div class="text-sm font-semibold text-gray-900">Book this service</div>
          <div class="text-xs text-gray-500 mt-1">Fields marked with * are required.</div>

          <form id="bookingForm" class="mt-4 space-y-4">
            <input type="hidden" name="serviceId" value="<%= service.id %>" />

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
                <input name="customerName" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Phone *</label>
                <input name="phone" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Preferred time *</label>
              <% if (timeSlots && timeSlots.length > 0) { %>
                <select name="preferredTime" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">Select a time slot</option>
                  <% timeSlots.forEach(function(slot) { %>
                    <option value="<%= slot %>"><%= slot %></option>
                  <% }); %>
                </select>
                <div class="mt-1 text-xs text-gray-500">These slots are configured for this service.</div>
              <% } else { %>
                <input name="preferredTime" required placeholder="e.g. 2026-02-01 10:00" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <div class="mt-1 text-xs text-gray-500">No predefined slots. Enter your preferred time.</div>
              <% } %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Reference image (optional)</label>
              <input type="file" name="reference_image" accept="image/*" class="w-full px-3 py-2 border rounded-lg" />
              <div class="mt-1 text-xs text-gray-500">JPG/PNG/GIF/WebP up to 5MB.</div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Note (optional)</label>
              <textarea name="optionalNote" rows="3" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
            </div>

            <div class="flex items-center gap-3">
              <button type="submit" class="px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700">Submit booking</button>
              <a href="/service-booking" class="px-4 py-2 rounded-lg border text-gray-700 hover:bg-gray-50">Back</a>
            </div>

            <div id="formError" class="hidden bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-800"></div>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    const form = document.getElementById('bookingForm');
    const formError = document.getElementById('formError');
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        formError.classList.add('hidden');
        formError.textContent = '';

        try {
          const fd = new FormData(form);
          const res = await fetch('/service-booking/api/bookings', { method: 'POST', body: fd });
          const data = await res.json();
          if (!res.ok || !data.success) {
            throw new Error(data.error || 'Booking failed.');
          }
          window.location.href = `/service-booking/bookings/${data.bookingId}/success`;
        } catch (err) {
          formError.textContent = err && err.message ? err.message : 'Booking failed.';
          formError.classList.remove('hidden');
        }
      });
    }
  </script>
</body>
</html>

