<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Account</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <%- include('../partials/topnav', { title: 'My Account', subtitle: user.email, containerClass: 'max-w-5xl' }) %>

    <div class="max-w-5xl mx-auto px-4 py-6 space-y-6">
      <div class="bg-white border rounded-xl shadow-sm p-5 flex items-start justify-between gap-4">
        <div class="min-w-0">
          <div class="text-sm text-gray-500">Logged in as</div>
          <div class="text-lg font-semibold text-gray-900 truncate"><%= user.email %></div>
          <div class="text-sm text-gray-700 mt-1">Phone: <%= user.phone %></div>
          <div class="text-sm text-gray-700 mt-1">Role: <%= user.role %></div>
        </div>
        <form method="post" action="/logout">
          <button class="px-4 py-2 rounded-lg border text-gray-700 hover:bg-gray-50" type="submit">Logout</button>
        </form>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
        <!-- Group-buy orders -->
        <div class="bg-white border rounded-xl shadow-sm p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm font-semibold text-gray-900">Group-buy orders</div>
            <a class="text-xs text-blue-600 hover:text-blue-800" href="/query-order">View all orders</a>
          </div>
          <% if (!groupBuyOrders || groupBuyOrders.length === 0) { %>
            <div class="mt-3 text-sm text-gray-600">No group-buy orders yet</div>
          <% } else { %>
            <div class="mt-3 space-y-2">
              <% groupBuyOrders.forEach(function(o){ %>
                <div class="border rounded-lg p-3">
                  <div class="flex items-start justify-between gap-3">
                    <div class="min-w-0">
                      <div class="text-sm font-medium text-gray-900">Order <span class="font-mono text-xs"><%= o.id %></span></div>
                      <div class="text-xs text-gray-500 mt-1"><%= new Date(o.createdAt).toLocaleString() %> 路 Status: <%= o.internalStatus %></div>
                      <div class="text-xs text-gray-500 mt-1">Delivery time: <%= o.deliveryTime %></div>
                    </div>
                    <div class="text-right text-xs text-gray-500">
                      <div>Region</div>
                      <div class="text-gray-800 font-medium"><%= o.region || '-' %></div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>

        <!-- Service bookings -->
        <div class="bg-white border rounded-xl shadow-sm p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm font-semibold text-gray-900">Service bookings</div>
            <a class="text-xs text-blue-600 hover:text-blue-800" href="/service-booking">Book a service</a>
          </div>
          <% if (!serviceBookings || serviceBookings.length === 0) { %>
            <div class="mt-3 text-sm text-gray-600">No service bookings yet</div>
          <% } else { %>
            <div class="mt-3 space-y-2">
              <% serviceBookings.forEach(function(b){ %>
                <div class="border rounded-lg p-3">
                  <div class="text-sm font-medium text-gray-900"><%= b.service ? b.service.name : 'Service' %></div>
                  <div class="text-xs text-gray-500 mt-1"><%= new Date(b.createdAt).toLocaleString() %> 路 Status: <%= b.status %></div>
                  <div class="text-xs text-gray-500 mt-1">Time: <%= b.preferredTime %></div>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Custom service requests -->
      <div class="bg-white border rounded-xl shadow-sm p-5">
        <div class="flex items-center justify-between">
          <div class="text-sm font-semibold text-gray-900">My custom service requests</div>
          <a class="text-xs text-blue-600 hover:text-blue-800" href="/service-booking/requests/new">Post a new request</a>
        </div>
        <% if (!serviceRequests || serviceRequests.length === 0) { %>
          <div class="mt-3 text-sm text-gray-600">No requests yet</div>
        <% } else { %>
          <div class="mt-3 space-y-3">
            <% serviceRequests.forEach(function(r){ %>
              <div class="border rounded-lg p-4">
                <div class="flex items-start justify-between gap-3">
                  <div class="min-w-0">
                    <div class="text-sm font-semibold text-gray-900"><%= r.serviceType %> <span class="text-xs text-gray-500"><%= r.title || '' %></span></div>
                    <div class="text-xs text-gray-500 mt-1"><%= new Date(r.createdAt).toLocaleString() %> 路 Status: <%= r.status %> 路 Quotes: <%= r.quotes ? r.quotes.length : 0 %></div>
                  </div>
                  <div class="text-right text-xs text-gray-500">
                    <div>Selected</div>
                    <div class="text-gray-800 font-medium"><%= r.selectedQuoteId ? 'Yes' : 'No' %></div>
                  </div>
                </div>
                <div class="mt-2 text-sm text-gray-700 line-clamp-2 whitespace-pre-line"><%= r.description %></div>
                <div class="mt-3">
                  <a class="text-sm text-blue-600 hover:text-blue-800" href="/service-booking/requests/<%= r.id %><%= r.userToken ? ('?token=' + encodeURIComponent(r.userToken)) : '' %>">View details</a>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>

    </div>
  </div>
</body>
</html>

