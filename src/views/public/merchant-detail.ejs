<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= merchant.name %> - Merchant</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <%- include('../partials/topnav', {
      title: merchant.name,
      subtitle: 'Merchant detail',
      containerClass: 'max-w-5xl'
    }) %>

    <div class="max-w-5xl mx-auto px-4 py-6 space-y-6">
      <div class="bg-white border rounded-xl shadow-sm p-5 flex gap-4">
        <div class="w-28 h-28 rounded-xl bg-gray-100 border overflow-hidden flex-shrink-0">
          <% if (merchant.imageUrl) { %>
            <img src="<%= merchant.imageUrl %>" alt="<%= merchant.name %>" class="w-full h-full object-cover" />
          <% } else { %>
            <div class="w-full h-full flex items-center justify-center text-xs text-gray-400">No image</div>
          <% } %>
        </div>
        <div class="flex-1 min-w-0">
          <div class="flex items-start justify-between gap-3">
            <div class="min-w-0">
              <div class="text-xl font-semibold text-gray-900 truncate"><%= merchant.name %></div>
              <div class="mt-1 text-sm text-gray-600 whitespace-pre-line"><%= merchant.description || '' %></div>
            </div>
            <div class="text-right text-xs text-gray-500 flex-shrink-0">
              <div><%= merchant._count ? merchant._count.packages : 0 %> group buys</div>
              <div><%= merchant._count ? merchant._count.services : 0 %> services</div>
            </div>
          </div>

          <div class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-2 text-sm text-gray-700">
            <% if (merchant.openHours) { %>
              <div><span class="text-gray-500">Hours:</span> <%= merchant.openHours %></div>
            <% } %>
            <% if (merchant.address) { %>
              <div><span class="text-gray-500">Address:</span> <%= merchant.address %></div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
        <div class="bg-white border rounded-xl shadow-sm p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm font-semibold text-gray-900">Group buys</div>
            <a class="text-xs text-blue-600 hover:text-blue-800" href="/order">Go to group-buy →</a>
          </div>
          <% if (!packages || packages.length === 0) { %>
            <div class="mt-3 text-sm text-gray-600">No group buys yet.</div>
          <% } else { %>
            <div class="mt-3 space-y-2">
              <% packages.forEach(function(p) { %>
                <a href="/order?packageId=<%= p.id %>" class="block border rounded-lg p-3 hover:border-blue-300 transition">
                  <div class="flex items-start justify-between gap-3">
                    <div class="min-w-0">
                      <div class="text-sm font-medium text-gray-900 truncate"><%= p.name %></div>
                      <div class="text-xs text-gray-500 line-clamp-2"><%= p.description || '' %></div>
                      <% if (p.region) { %>
                        <div class="mt-1 text-[11px] text-gray-500">Region: <%= p.region %></div>
                      <% } %>
                    </div>
                    <div class="text-right flex-shrink-0">
                      <% if (p.originalPrice) { %>
                        <div class="text-[11px] text-gray-400 line-through">$<%= Number(p.originalPrice).toFixed(2) %></div>
                        <div class="text-sm font-bold text-red-600">$<%= Number(p.price).toFixed(2) %></div>
                      <% } else { %>
                        <div class="text-sm font-bold text-blue-600">$<%= Number(p.price).toFixed(2) %></div>
                      <% } %>
                    </div>
                  </div>
                </a>
              <% }); %>
            </div>
          <% } %>
        </div>

        <div class="bg-white border rounded-xl shadow-sm p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm font-semibold text-gray-900">Services</div>
            <a class="text-xs text-blue-600 hover:text-blue-800" href="/service-booking/list">Go to services →</a>
          </div>
          <% if (!services || services.length === 0) { %>
            <div class="mt-3 text-sm text-gray-600">No services yet.</div>
          <% } else { %>
            <div class="mt-3 space-y-2">
              <% services.forEach(function(s) { %>
                <a href="/service-booking/services/<%= s.id %>" class="block border rounded-lg p-3 hover:border-blue-300 transition">
                  <div class="flex items-start justify-between gap-3">
                    <div class="min-w-0">
                      <div class="text-sm font-medium text-gray-900 truncate"><%= s.name %></div>
                      <div class="text-xs text-gray-500 line-clamp-2"><%= s.description || '' %></div>
                    </div>
                    <div class="text-right flex-shrink-0">
                      <div class="text-xs text-gray-500">Price</div>
                      <div class="text-sm font-bold text-blue-600"><%= s.price ? ('$' + Number(s.price).toFixed(2)) : '-' %></div>
                    </div>
                  </div>
                </a>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>

      <div>
        <a href="/merchants" class="text-sm text-blue-600 hover:text-blue-800">← Back to merchants</a>
      </div>
    </div>
  </div>
</body>
</html>

