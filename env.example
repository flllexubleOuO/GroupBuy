# Server
NODE_ENV=development
PORT=3000

# Database (SQLite by default in this repo)
# Local dev example:
DATABASE_URL="file:./prisma/dev.db"

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# Session
SESSION_SECRET=change-me-to-a-long-random-string

# Uploads
UPLOAD_DEST=./public/uploads
UPLOAD_MAX_SIZE=5242880

# Seed (optional)
# WARNING: seed-all will CLEAR tables first (mock env only).
SEED_ON_START=false
# If true, seed runs on every container restart (ignores marker).
SEED_ALWAYS=false
# Marker file for "seed only once" behavior (default: /data/.seeded)
SEED_MARKER_FILE=/data/.seeded

# Shopify
SHOPIFY_STORE_DOMAIN=example.myshopify.com
SHOPIFY_ADMIN_API_ACCESS_TOKEN=YOUR_SHOPIFY_ADMIN_API_ACCESS_TOKEN
SHOPIFY_API_VERSION=2024-01

# S3 (optional)
S3_ENABLED=false
S3_REGION=us-east-1
S3_BUCKET=dummy-bucket
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FOLDER_PREFIX=
S3_PUBLIC_ACCESS=false
S3_PUBLIC_URL=

